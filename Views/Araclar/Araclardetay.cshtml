@using MvcTicariOtomasyon.Models.Siniflar;
@model List<Araclar>
@{
    ViewBag.Title = "Araclardetay";
    Layout = null;
}

<html>
<head>
    <title>ClebWeb Ticari Otomasyon</title>
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Table datatable css -->
    <link href="~/web/assets/libs/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/assets/libs/datatables/select.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Custom box css -->
    <link href="~/web/assets/libs/custombox/custombox.min.css" rel="stylesheet">
    <!-- App css -->
    <link href="~/web/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet" />
    <link href="~/web/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-stylesheet" />
</head>
<body>


    <div class="col-12">
        <div class="card-box">
            <a href="/Araclar" class="btn btn-primary float-right text-white">Geri Dön</a>
            <h4 class="header-title">Araçlar Detay Tablosu</h4>
            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th>Arac Plaka</th>
                        <th>Arac Dorse Plaka</th>
                        <th>Açıklama</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Km</th>
                        <th>Sigorta Tarihi</th>
                        <th>Muayene Tarihi</th>
                        <th>Kasko Tarihi</th>
                        <th>Bakım Tarihi</th>
                        <th>Arac Tipi</th>
                        <th>Arac Grubu</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var k in Model)
                    {
                        <tr>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Aracplaka </a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">  @k.Aracdorseplaka </a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Aciklama </a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Marka </a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Model </a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Km </a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">@k.SigortaTarihi</a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">@k.MuayeneTarihi</a>

                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">@k.KaskoTarihi</a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">@k.BakımTarihi</a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">@k.Aractipi.Aractipiname</a>
                            </td>
                            <td>
                                <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                   data-overlaySpeed="100" data-overlayColor="#36404a" id="#">
                                    @if (k.Aracgrubuid == 1)
                                    {
                                        <text>Şirket</text>
                                    }
                                    else if (k.Aracgrubuid == 2)
                                    {
                                        <text>Kiralık</text>
                                    }
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    </div>
    <script src="~/web/assets/js/vendor.min.js"></script>

    <!-- Modal-Effect -->
    <script src="~/web/assets/libs/custombox/custombox.min.js"></script>

    <!-- App js -->
    <script src="~/web/assets/js/app.min.js"></script>
    <script src="~/web/assets/libs/pdfmake/pdfmake.min.js"></script>
    <script src="~/web/assets/libs/pdfmake/vfs_fonts.js"></script>
    <script src="~/web/assets/libs/jszip/jszip.min.js"></script>
    <!-- Datatable plugin js -->
    <script src="~/web/assets/libs/datatables/jquery.dataTables.min.js"></script>
    <script src="~/web/assets/libs/datatables/dataTables.bootstrap4.min.js"></script>

    <script src="~/web/assets/libs/datatables/dataTables.responsive.min.js"></script>
    <script src="~/web/assets/libs/datatables/responsive.bootstrap4.min.js"></script>

    <script src="~/web/assets/libs/datatables/dataTables.buttons.min.js"></script>
    <script src="~/web/assets/libs/datatables/buttons.bootstrap4.min.js"></script>

    <script src="~/web/assets/libs/datatables/buttons.html5.min.js"></script>
    <script src="~/web/assets/libs/datatables/buttons.print.min.js"></script>

    <!-- Datatables init -->
    <script src="~/web/assets/js/pages/datatables.init.js"></script>
</body>
</html>