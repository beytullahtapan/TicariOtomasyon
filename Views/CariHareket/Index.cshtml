@using MvcTicariOtomasyon.Models.Siniflar;
@model List<CariHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Cari Hareketler</a></li>
                        <li class="breadcrumb-item active">Listele</li>
                    </ol>
                </div>
                <h4 class="page-title">Cari Hareketler</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">



        <div class="col-12">
            <div class="card-box">
                <a href="/Guzergah/Guzergahdetay" class="btn btn-primary  text-white m-2">PDF/EXCEL</a>
                <hr />
                <div class="filter-section float-right mr-2 ml-2">
                    <label for="endDate">Bitiş Tarihi:</label>
                    <input type="datetime-local" id="endDate" />
                </div>
                <div class="filter-section float-right mr-2 ml-2">
                    <label for="filterBaslangicTarih">Başlangıç Tarihi:</label>
                    <input type="datetime-local" id="filterBaslangicTarih" />
                </div>
                <h4 class="header-title">Cari Hareketler</h4>
                <table id="responsive-datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Cari Adı</th>
                            <th>İşlem Açıklaması</th>
                            <th>Tarih</th>
                            <th>Alacak</th>
                            <th>Borc</th>
                            <th>Bakiye</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var k in Model)
                        {
                            <tr data-tarih="@k.Tarih">
                                <td>
                                    <a href="#custom-modal-@k.CariHareketid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Cari.Cariad </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.CariHareketid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Acıklama </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.CariHareketid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Tarih </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.CariHareketid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Alacak </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.CariHareketid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Borc </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.CariHareketid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Bakiye</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
