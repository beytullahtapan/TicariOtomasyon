@using MvcTicariOtomasyon.Models.Siniflar;
@model List<Guzergah>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Guzergah</a></li>
                        <li class="breadcrumb-item active">Listele</li>
                    </ol>
                </div>
                <h4 class="page-title">Guzergah</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">



        <div class="col-12">
            <div class="card-box">
                <a href="/Guzergah/Guzergahekle" class="btn btn-primary float-right text-white">Yeni Guzergah Ekle</a>
                <a href="/Guzergah/Guzergahdetay" class="btn btn-primary  text-white m-2">PDF/EXCEL</a>
                <hr />
                <h4 class="header-title">Kasa</h4>
                <table id="responsive-datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Guzergah Adı</th>
                            <th>Yönet</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var k in Model)
                        {
                            <tr>
                                <td>
                                    <a href="#custom-modal-@k.Guzergahid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Guzergahadı </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Guzergahid" class="btn btn-primary" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">Yönet</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@foreach (var k in Model)
{
    <div id="custom-modal-@k.Guzergahid" class="modal-demo">
        <button type="button" class="close" onclick="Custombox.modal.close();">
            <span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="custom-modal-title">Cari İşlemleri</h4>
        <div class="custom-modal-text text-muted">
            <h4><a class="text-dark"  href="/Guzergah/Guzergahgetir/@k.Guzergahid">Guzergah Düzenle <i class="fas fa-edit float-right"></i></a></h4>
            <hr class="border border-primary border-1 opacity-50">
            <h4><a class="text-dark" href="/Guzergah/Guzergahsil/@k.Guzergahid">Guzergah Sil <i class="fas fa-user-minus float-right"></i></a></h4>
        </div>
    </div>
}

