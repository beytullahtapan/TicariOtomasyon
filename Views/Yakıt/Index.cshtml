@using MvcTicariOtomasyon.Models.Siniflar;
@model List<Yakıt>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Yakıt Kullanımı</a></li>
                        <li class="breadcrumb-item active">Listele</li>
                    </ol>
                </div>
                <h4 class="page-title">Yakıt Kullanımı</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">



        <div class="col-12">
            <div class="card-box">
                <a href="/Yakıt/Yakıtekle" class="btn btn-primary float-right text-white">Yakıt Kullanımı Ekle</a>
                <a href="/Yakıt/Yakıtdetay" class="btn btn-primary  text-white m-2">PDF/EXCEL</a>
                <hr />
                <h4 class="header-title">Yakıt Kullanım Tablosu</h4>
                <div class="filter-section float-right mr-2 ml-2">
                    <label for="filterAracGrup">Araç Grubu:</label>
                    <select id="filterAracGrup">
                        <option value="all">Hepsi</option>
                        <option value="sirket">Şirket</option>
                        <option value="kiralik">Kiralık</option>
                    </select>
                </div>
                <div class="filter-section float-right mr-2 ml-2">
                    <label for="endDate">Bitiş Tarihi:</label>
                    <input type="datetime-local" id="endDate" />
                </div>
                <div class="filter-section float-right mr-2 ml-2">
                    <label for="filterBaslangicTarih">Başlangıç Tarihi:</label>
                    <input type="datetime-local" id="filterBaslangicTarih" />
                </div>
                <table id="responsive-datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Sofor</th>
                            <th>Plaka</th>
                            <th>İlk km</th>
                            <th>Son km</th>
                            <th>Yapılan km</th>
                            <th>Alınan Benzin Tutarı</th>
                            <th>Alınan Benzin lt</th>
                            <th>Yakıt Yüzde</th>
                            <th>Araç Grubu</th>
                            <th>Yönet</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var k in Model)
                        {
                            <tr data-tarih="@k.Tarih">
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Tarih</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Sofor.Cariad</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Arac.Aracplaka</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.İlkkm</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Sonkm</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Yapılankm</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Toplamtutar ₺</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.AlinanLt</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Yakıtyüzde</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#">
                                        @if (k.Arac.Aracgrubuid == 1)
                                        {
                                            <text>Şirket</text>
                                        }
                                        else if (k.Arac.Aracgrubuid == 2)
                                        {
                                            <text>Kiralık</text>
                                        }
                                    </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Yakitid" class="btn btn-primary" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">Yönet</a>
                                    <a href="#custom-modal2-@k.Yakitid" class="btn btn-primary" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">Detay</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@foreach (var k in Model)
{
    <div id="custom-modal-@k.Yakitid" class="modal-demo">
        <button type="button" class="close" onclick="Custombox.modal.close();">
            <span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="custom-modal-title">Yakıt İşlemleri</h4>
        <div class="custom-modal-text text-muted">
            <h4><a class="text-dark" href="/Yakıt/Yakıtgetir/@k.Yakitid">Düzenle <i class="fas fa-edit float-right"></i></a></h4>
            <hr class="border border-primary border-1 opacity-50">
            <h4><a class="text-dark" href="/Yakıt/Yakıtsil/@k.Yakitid">Sil <i class="fas fa-user-minus float-right"></i></a></h4>
        </div>
    </div>
}

@foreach (var k in Model)
{
    <div id="custom-modal2-@k.Yakitid" class="modal-demo">
        <button type="button" class="close" onclick="Custombox.modal.close();">
            <span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="custom-modal-title">@k.Arac.Aracplaka Detayları</h4>
        <div class="custom-modal-text text-muted">
            <label>Yakıt Alım Tarihi : </label>@k.Tarih
            <hr class="border border-primary border-1 opacity-50">
            <label>Araç ilk km : </label>@k.İlkkm
            <hr class="border border-primary border-1 opacity-50">
            <label>Araç Son km : </label>@k.Sonkm
            <hr class="border border-primary border-1 opacity-50">
            <label>Yapılan km : </label>@k.Yapılankm
            <hr class="border border-primary border-1 opacity-50">
            <label>Alınan Litre : </label>@k.AlinanLt
            <hr class="border border-primary border-1 opacity-50">
            <label>Alınan birim tutar : </label>@k.Birimtutar
            <hr class="border border-primary border-1 opacity-50">
            <label>Alınan Benzin Toplam tutar : </label>@k.Toplamtutar
            <hr class="border border-primary border-1 opacity-50">
            <label>Benzin alınan petrol ofisi : </label>@k.Petrol.Cariad
            <hr class="border border-primary border-1 opacity-50">
            <label>Alınan Güzergah : </label>@k.Güzergahid
            <hr class="border border-primary border-1 opacity-50">
            <label>Yakıt Yüzdesi : </label>@k.Yakıtyüzde
            <hr class="border border-primary border-1 opacity-50">
            <label>Yakıt alan şöför : </label>@k.Sofor.Cariad
            <hr class="border border-primary border-1 opacity-50">

        </div>
    </div>
}



