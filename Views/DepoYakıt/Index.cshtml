@using MvcTicariOtomasyon.Models.Siniflar;
@model List<Depoyakıt>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Yakıt Kullanımı</a></li>
                        <li class="breadcrumb-item active">Listele</li>
                    </ol>
                </div>
                <h4 class="page-title">Depodan Yakıt Kullanımı</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">



        <div class="col-12">
            <div class="card-box">
                <a href="/DepoYakıt/Yakıtekle" class="btn btn-primary float-right text-white">Yakıt Kullanımı Ekle</a>
                <h4 class="header-title">Depodan Yakıt Kullanım Tablosu</h4>
                <div class="filter-section float-right mr-2 ml-2">
                    <label for="filterAracGrup">Araç Grubu:</label>
                    <select id="filterAracGrup">
                        <option value="all">Hepsi</option>
                        <option value="sirket">Şirket</option>
                        <option value="kiralik">Kiralık</option>
                    </select>
                </div>
                <table id="responsive-datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Depo Adı</th>
                            <th>Alım Sonrası Depo Yüzde</th>
                            <th>Sofor</th>
                            <th>Plaka</th>
                            <th>Yapılan km</th>
                            <th>Alınan Benzin Tutarı</th>
                            <th>Alınan Benzin lt</th>
                            <th>Yakıt Yüzde</th>
                            <th>Araç Grubu</th>
                            <th>Yönet</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var k in Model)
                        {
                            <tr>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Tarih</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Depo.DepoAdi</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Depo.DepoYüzde</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Sofor.Cariad</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#"> @k.Arac.Aracplaka</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Yapılankm</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Toplamtutar ₺</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.AlinanLt</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">@k.Yakıtyüzde</a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Aracid" class="text-dark" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="#">
                                        @if (k.Arac.Aracgrubuid == 1)
                                        {
                                            <text>Şirket</text>
                                        }
                                        else if (k.Arac.Aracgrubuid == 2)
                                        {
                                            <text>Kiralık</text>
                                        }
                                    </a>
                                </td>
                                <td>
                                    <a href="#custom-modal-@k.Depoyakıtid" class="btn btn-primary" data-animation="door" data-plugin="custommodal"
                                       data-overlaySpeed="100" data-overlayColor="#36404a" id="">Yönet</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@foreach (var k in Model)
{
    <div id="custom-modal-@k.Depoyakıtid" class="modal-demo">
        <button type="button" class="close" onclick="Custombox.modal.close();">
            <span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="custom-modal-title">Yakıt İşlemleri</h4>
        <div class="custom-modal-text text-muted">
            <h4><a class="text-dark" href="/DepoYakıt/Yakıtgetir/@k.Depoyakıtid">Düzenle <i class="fas fa-edit float-right"></i></a></h4>
            <hr class="border border-primary border-1 opacity-50">
            <h4><a class="text-dark" href="/DepoYakıt/Yakıtsil/@k.Depoyakıtid">Sil <i class="fas fa-user-minus float-right"></i></a></h4>
        </div>
    </div>
}
