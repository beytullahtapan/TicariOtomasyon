@using MvcTicariOtomasyon.Models.Siniflar;
@model List<KasaHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Kasa</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Kasa.Kasaadı</li>
                    </ol>
                </div>
                <h4 class="page-title">@ViewBag.Kasa.Kasaadı Hareketleri</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">

        <div class="col-12">
            <div class="card-box">
                <a href="/Kasadetay/Kasahareketdetay/@ViewBag.Kasa.Kasaid" class="btn btn-primary  text-white m-2">PDF/EXCEL</a>
                <h4 class="header-title">@ViewBag.Kasa.Kasaadı Hareket Detayları</h4>
                @if (Model.Count == 0)
                {
                    <h1 class="m-5">Cariye ait hareket detayı yok..</h1>
                }
                else
                {
                    <table id="responsive-datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                        <thead>
                            <tr>
                                <th>Kasa Adı</th>
                                <th>İşlem Açıklaması</th>
                                <th>Tarih</th>
                                <th>Borc</th>
                                <th>Alacak</th>
                                <th>Bakiye</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cariHareket in Model)
                            {
                                <tr>
                                    <td>@cariHareket.Kasa.Kasaadı</td>
                                    <td>@cariHareket.Acıklama</td>
                                    <td>@cariHareket.Tarih</td>
                                    <td>@cariHareket.Giren</td>
                                    <td>@cariHareket.Cıkan</td>
                                    <td>@cariHareket.Bakiye</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
